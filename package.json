{
  "name": "contextual-clarity",
  "version": "0.1.0",
  "description": "A conversational spaced repetition system combining FSRS scheduling with Socratic AI dialogs",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "check": "bun tsc --noEmit",
    "build": "./scripts/build.sh",
    "test": "bun test ././src ././tests",
    "test:e2e": "cd e2e && bun run test",
    "test:e2e:headed": "cd e2e && bun run test:headed",
    "test:e2e:ui": "cd e2e && bun run test:ui",
    "test:e2e:smoke": "cd e2e && bun run test:smoke",
    "test:e2e:install": "cd e2e && bun install && bun run install-browsers",
    "test:unit": "bun test ././src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/storage/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/storage/seed.ts",
    "cli": "bun run src/cli/index.ts",
    "server": "bun run src/api/server.ts",
    "web:dev": "cd web && bun run dev",
    "web:build": "cd web && bun run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@deepgram/sdk": "^3.0.0",
    "commander": "14.0.3",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.18",
    "ts-fsrs": "^4.4.1",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.15",
    "drizzle-kit": "^0.30.4"
  }
}
