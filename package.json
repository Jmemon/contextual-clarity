{
  "name": "contextual-clarity",
  "version": "0.1.0",
  "description": "A conversational spaced repetition system combining FSRS scheduling with Socratic AI dialogs",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "check": "bun tsc --noEmit",
    "test": "bun test",
    "test:e2e": "bun test tests/e2e",
    "test:unit": "bun test src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/storage/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/storage/seed.ts",
    "cli": "bun run src/cli/index.ts",
    "server": "bun run src/api/server.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "commander": "14.0.3",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.18",
    "ts-fsrs": "^4.4.1",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.15",
    "drizzle-kit": "^0.30.4"
  }
}
