# =============================================================================
# Contextual Clarity - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the HTTP server (default: 3002)
PORT=3011
# Host binding (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0
# Environment: development, production, or test
NODE_ENV=development

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database type: sqlite (local development) or postgres (production)
DATABASE_TYPE=sqlite
# For SQLite: file path (e.g., ./contextual-clarity.db)
# For PostgreSQL: connection string (e.g., postgres://user:pass@host:5432/db)
DATABASE_URL=./contextual-clarity.db

# -----------------------------------------------------------------------------
# Anthropic API Configuration (Required)
# -----------------------------------------------------------------------------
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
# Model to use for conversations (default: claude-sonnet-4-5-20250929)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
# Maximum tokens for LLM responses (default: 1024)
ANTHROPIC_MAX_TOKENS=32768

# -----------------------------------------------------------------------------
# Deepgram API Configuration (Optional - for voice input)
# -----------------------------------------------------------------------------
# Get your API key at: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Directory for storing uploaded source materials
SOURCES_DIR=./data/sources

# -----------------------------------------------------------------------------
# Rate Limiting (API protection)
# -----------------------------------------------------------------------------
# Time window for rate limiting in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100
