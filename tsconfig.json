{
  "compilerOptions": {
    /* Base configuration for Bun + TypeScript */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],

    /* Type safety options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Module interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Output settings - Bun handles compilation, so we just type-check */
    "noEmit": true,
    "skipLibCheck": true,

    /* Path resolution */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Bun-specific types */
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "drizzle.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
